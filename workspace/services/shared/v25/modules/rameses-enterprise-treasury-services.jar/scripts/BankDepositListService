import com.rameses.annotations.*;
import com.rameses.util.*;
import java.rmi.server.*;
import com.rameses.common.*
import com.rameses.services.extended.*

class BankDepositListService extends AbstractListService {

	@PersistenceContext("main")
	def em; 

	String schemaName = "bankdeposit";

	@Env
	def env;

	@ProxyMethod
	public def getColumns( def p ) {
		return [
			[name:"txnno", caption:"Remittance No", width:120, resizable:false],
			[name:"dtposted", caption:"Remittance Date", width:120, resizable:false],
			[name:"cashier.name", caption:"Cashier"],
			[name:"totalcash", caption:"Total Cash"],
			[name:"totalnoncash", caption:"Total Noncash"],
			[name:"amount", caption:"Amount"]
		];	
	}	

	void beforeList(o) {
		o.txnno = o.searchtext 
		o.searchtext = (o.searchtext ? o.searchtext : '') +'%'
	}

	
}